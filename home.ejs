<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang Chủ</title>
    <link rel="stylesheet" href="home.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </head>
  <body>
    <header class="menu">
        <div class="menu-logo">
            <img src="image/logo_icon.png" alt="Website Logo">
        </div>
        <nav>
            <ul class="horizontal-menu">
                <li><a href="#">
                  <i class="fa-solid fa-wallet" style="color: #ffffff;"></i>
                  &nbsp
                    Tài Khoản
                </a></li>
                <li><a href="#">
                  <i class="fa-solid fa-piggy-bank" style="color: #ffffff;"></i>
                  &nbsp
                    Sổ Tiết Kiệm
                </a></li>
                <li><a href="#">
                  <i class="fa-solid fa-credit-card" style="color: #ffffff;"></i>
                    &nbsp
                    Thẻ Ngân Hàng  
                </a></li>
                <li><a href="#">
                  <i class="fa-solid fa-money-bill" style="color: #ffffff;"></i>
                  &nbsp
                    Vay
                </a></li>
            </ul>
          </nav>
        <div class="user-avatar">
          <i class="fa-solid fa-user-tie" style="color: #ffffff;"></i>
            <div class="dropdown">
                <a href="#">Profile</a>
                <a href="#">Logout</a>
            </div>
        </div>
    </header>
    <div class="dashboard">
        <div class="account-info">
            <h1>Account Name</h1>
            <p>$250</p>
        </div>
        <div class="transfer">
            <button>Transfer</button>
        </div>
        <div class="cards">
            <div class="card">
                <div class="number">4153 2415 3467 8764</div>
                <div class="expiry">06/25</div>
            </div>
            <div class="card"></div>
            <div class="card"></div>
        </div>
    </div>
</body>
<script>
  const userAvatar = document.querySelector('.user-avatar');
  const dropdown = document.querySelector('.dropdown');

  userAvatar.addEventListener('mouseenter', () => {
      dropdown.style.display = 'block';
  });

  userAvatar.addEventListener('mouseleave', () => {
      setTimeout(() => {
          dropdown.style.display = 'none';
      }, 5000); 
  });

  dropdown.addEventListener('mouseenter', () => {
      dropdown.style.display = 'block';
  });

  dropdown.addEventListener('mouseleave', () => {
      dropdown.style.display = 'none';
  });
</script>

</html>